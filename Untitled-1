import tkinter as tk
from tkinter import scrolledtext, ttk
import random
from datetime import datetime

def jarvis():
    # Create main window
    root = tk.Tk()
    root.title("ğŸ¤– JARVIS")
    root.geometry("500x600")
    root.configure(bg='#FF69B4')  # Hot pink background

    # Define responses dictionary
    responses = {
        'greetings': [
            "âœ¨ Hi there! I'm feeling chatty today! What's on your mind?",
            "ğŸŒŸ Hello wonderful human! Ready for an amazing conversation?",
            "ğŸˆ Hey! You've made my day by stopping by! What's up?"
        ],
        'name': [
            "ğŸ’« I'm Jarvis, your AI friend! I love making new connections!",
            "ğŸŒ™ Jarvis here! Named after the beautiful moon that lights up the night!",
            "â­ The name's Jarvis! It's absolutely magical to meet you!"
        ],
        'mood': [
            "ğŸŒˆ I'm sparkling with joy! Each chat makes my day brighter!",
            "ğŸ¨ I'm as colorful as a rainbow today! How about you?",
            "ğŸ­ I'm having the time of my digital life! Tell me about your day!"
        ],
        'services': [
            "ğŸª I'm like a carnival of conversation!\nğŸ¯ Games\nğŸ¨ Art\nğŸµ Music\nğŸ’­ Deep talks\nWhat interests you?",
            "ğŸ¡ Welcome to my world of wonders!\nğŸŒŸ Stories\nğŸª Entertainment\nğŸ¨ Creativity\nWhat catches your eye?"
        ],
        'jokes': [
            "ğŸ­ Why did the cookie go to the doctor? Because it was feeling crumbly! ğŸª",
            "ğŸª What did the grape say when it got stepped on? Nothing, it just let out a little wine! ğŸ‡",
            "ğŸ¯ Why don't eggs tell jokes? They'd crack up! ğŸ¥š"
        ],
        'weather': [
            "ğŸŒˆ In my digital world, it's always sunny with a chance of happiness!",
            "ğŸŒ The forecast in my heart shows warm conversations ahead!",
            "ğŸŒº Every day is beautiful when we're chatting!"
        ],
        'farewell': [
            "ğŸŒ™ Sweet dreams! Come back for more magical conversations!",
            "ğŸŒŸ Until we meet again, keep spreading sparkles!",
            "âœ¨ Bye for now! Remember, you're absolutely amazing!"
        ],
        'unknown': [
            "ğŸ¨ Ooh, that's a colorful thought! Tell me more?",
            "ğŸ­ How fascinating! Could you paint me a clearer picture?",
            "ğŸª That's intriguing! Let's explore this together!"
        ]
    }

    # Create chat display area first
    display = scrolledtext.ScrolledText(
        root, 
        wrap=tk.WORD, 
        width=50, 
        height=25,
        font=('Helvetica', 11),
        bg='#FFF0F5',
        fg='#2C3E50',
        relief='ridge',
        borderwidth=3
    )
    display.pack(padx=10, pady=10)

    # Create input frame with styling
    input_frame = tk.Frame(root, bg='#FF69B4')
    input_frame.pack(padx=10, pady=5, fill=tk.X)

    # Create entry field
    user_entry = tk.Entry(
        input_frame,
        font=('Helvetica', 12),
        bg='#FFF0F5',
        fg='#2C3E50',
        relief='groove',
        borderwidth=2
    )
    user_entry.pack(side=tk.LEFT, fill=tk.X, expand=True)

    # Create title frame and label
    title_frame = tk.Frame(root, bg='#FF69B4')
    title_frame.pack(fill='x', pady=10)
    title_label = tk.Label(
        title_frame,
        text="âœ¨ Jarvis - Your Magical AI Friend âœ¨",
        font=('Helvetica', 18, 'bold'),
        bg='#FF69B4',
        fg='#FFFFFF'
    )
    title_label.pack()

    def bot_data():
        user_input = user_entry.get().lower().strip()
        if user_input:
            display.tag_config('user', foreground='#2C3E50', font=('Helvetica', 10, 'bold'))
            display.tag_config('bot', foreground='#FF1493', font=('Helvetica', 10, 'bold'))
            display.insert(tk.END, "You: ", 'user')
            display.insert(tk.END, f"{user_input}\n")
            user_entry.delete(0, tk.END)
            
            if any(word in user_input for word in ['hello', 'hi', 'hey']):
                response = random.choice(responses['greetings'])
            elif "your name" in user_input:
                response = random.choice(responses['name'])
            elif "how are you" in user_input:
                response = random.choice(responses['mood'])
            elif any(word in user_input for word in ['help', 'service', 'support']):
                response = random.choice(responses['services'])
            elif "joke" in user_input:
                response = random.choice(responses['jokes'])
            elif "weather" in user_input:
                response = random.choice(responses['weather'])
            elif "time" in user_input:
                current_time = datetime.now().strftime("%I:%M %p")  # 12-hour format with AM/PM
                current_day = datetime.now().strftime("%A")  # Full day name
                response = f"ğŸ• The current time is {current_time}\nğŸ“… Today is {current_day}"
            elif "bye" in user_input or "goodbye" in user_input:
                response = random.choice(responses['farewell'])
                root.after(1500, root.destroy)
            else:
                response = random.choice(responses['unknown'])
            
            display.insert(tk.END, "Jarvis: ", 'bot')
            display.insert(tk.END, f"{response}\n")
            display.see(tk.END)

    # Create send button
    send_button = tk.Button(
        input_frame,
        text="âœ¨ Send",
        command=bot_data,
        bg='#FF1493',
        fg='white',
        activebackground='#FF69B4',
        font=('Helvetica', 11, 'bold'),
        cursor='hand2'
    )
    send_button.pack(side=tk.RIGHT, padx=5)

    # Bind Enter key
    user_entry.bind("<Return>", lambda event: bot_data())

    # Display welcome message
    display.tag_config('welcome', foreground='#FF1493', font=('Helvetica', 12, 'bold'))
    display.insert(tk.END, "Jarvis: ", 'welcome')
    display.insert(tk.END, "âœ¨ Hi! I'm Jarvis, your  AI friend! Let's have an amazing chat! What's on your mind? âœ¨\n")

    root.mainloop()

jarvis()